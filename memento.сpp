
class Memento
{
  frined class Originator;
  private:
     Memento(){}
     Memento(const char& state)
     {
      this->_state = state;
     }
     ~Memento(){}
     void SetState(const char& state){
      this->state=state_;
     }
     char GetState(){
      return this->state_;
     }
     char state_;
}

class Originator
{
  public:
     Originator():state("LLRLLRLLR"){}
     ~Originator(){}
     void RestoreToMemento(Memento* nMemento){
      this->state_=nMemento.GetState; 
     }
     Memento* CreateMemento(){
      return new Memento(this->state_);
     }
     void SetState(const char& state){
      this->state_=state; 
     }
     char GetState(){
      return this->state_; 
     }
     void addL(){
      state_=strcat(state_,"L")
     }
  
     void addR(){
      state_=strcat(state_,"R")
     }
  private:
     char state_;
};

class Caretaker
{
  public:
     Caretaker(){}
     ~Caretaker(){}
     void SetMemento(Memento* nMemento){
      this->memento_ = nMemento; 
     }
     Memento* GetMemento(){
      return this->memento_; 
     }
  private:
     Memento* memento_;
};

int main(){
    Originator Case new Originator;
    Caretaker Seal new Caretaker;
    Seal
    Case.addL();
    Case.addR();
    Case.addL();
    Case.addL();
    Case.addR();
}
